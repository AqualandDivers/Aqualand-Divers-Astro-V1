---
// main layout
// components
import Button from "@components/Button/Button.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout title="Thank You" description="Thank you">
	<section class="site-container pt-36 text-center md:pt-44">
		<div class="mx-auto max-w-xl px-4 text-center">
			<h1 class="h1">Thank You</h1>
			<p class="description mt-4">
				Your message has been sent. <br>
				You should receive an email confirming delivery within a few minutes.
			</p>
			<div class="mt-8 flex justify-center">
				<Button variant="primary" href="/">Go to homepage</Button>
			</div>
		</div>
	</section>
</BaseLayout>
